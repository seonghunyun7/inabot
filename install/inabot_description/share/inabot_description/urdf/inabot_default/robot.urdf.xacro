<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="insert_robot" params="prefix">

        <!-- Base link -->
        <link name="base_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 3.14"/>
                <geometry>
                    <mesh filename="file://$(find inabot_description)/meshes/visual/inabot/base_link.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 3.14"/>
                <geometry>
                    <mesh filename="file://$(find inabot_description)/meshes/collision/inabot/base_link.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0.010 0.000 0.070" rpy="0 0 0"/>
                <mass value="67.084"/>
                <inertia ixx="1.067955" ixy="0.010608" ixz="-0.044928" iyy="2.497383" iyz="-0.000028" izz="3.217104"/>
            </inertial>
        </link>

        <!-- Wheels -->
        <xacro:macro name="insert_wheel" params="prefix dir">
            <link name="${prefix}_wheel"/>
            <joint name="${prefix}_wheel_joint" type="continuous">
                <parent link="base_link"/>
                <child link="${prefix}_wheel"/>
                <axis xyz="0 1 0"/>
                <origin xyz="0 ${dir*0.246} 0" rpy="0 0 0"/>
            </joint>
        </xacro:macro>

        <xacro:insert_wheel prefix="l" dir="1"/>
        <xacro:insert_wheel prefix="r" dir="-1"/>

        <!-- Lidar mount -->
        <link name="base_scan"/>
        <joint name="base_scan_fixed_joint" type="fixed">
            <parent link="base_link"/>
            <child link="base_scan"/>
            <origin xyz="0 0 0.15448" rpy="0 0 0"/>
        </joint>

        <!-- IMU mount -->
        <link name="imu_link"/>
        <joint name="imu_link_fixed_joint" type="fixed">
            <parent link="base_link"/>
            <child link="imu_link"/>
            <origin xyz="0.14 0 0.118" rpy="0 0 0"/>
        </joint>

    </xacro:macro>
</robot>
